[Unit]
Description=LLM API Server
After=network.target ollama.service

[Service]
User=ubuntu
WorkingDirectory=/opt/llm-server
ExecStart=/opt/llm-server/venv/bin/uvicorn src.main:app --host 0.0.0.0 --port 8000
Restart=always
Environment="APP_ENV=production"

[Install]
WantedBy=multi-user.target
